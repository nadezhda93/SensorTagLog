<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/select_sensor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_sensor"
        android:textSize="12sp"
        style="?android:listSeparatorTextViewStyle"/>


    <TextView
         android:id = "@+id/accelerometer_title"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft = "true"
         android:layout_below="@id/select_sensor"
         android:text = "@string/accelerometer"
         android:padding="3dp"/>

    <TextView
         android:id = "@+id/accelerometer_value"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/select_sensor"
         android:layout_alignParentRight="true"
         android:padding="3dp"  />

    <TextView
         android:id = "@+id/gyro_title"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft = "true"
         android:layout_below="@id/accelerometer_title"
         android:text = "@string/gyroscope"
         android:padding="3dp"/>

    <TextView
         android:id = "@+id/gyro_value"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight = "true"
         android:layout_below="@id/accelerometer_value"
         android:padding="3dp"/>

    <TextView
         android:id = "@+id/mag_title"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft = "true"
         android:layout_below="@id/gyro_title"
         android:text = "@string/magnetometer"
         android:padding="3dp"/>

    <TextView
        android:id = "@+id/mag_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight = "true"
        android:layout_below="@id/gyro_value"
        android:padding="3dp"
        />

</RelativeLayout>
