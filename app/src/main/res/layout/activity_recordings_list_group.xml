<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for individual news entries in a list for device discovery-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    style="?android:listSeparatorTextViewStyle">

    <!-- Recording ID-->
    <TextView
        android:id="@+id/expandable_header_recId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop = "5dp"
        android:layout_marginBottom = "5dp"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Subtitle contains timestamps of recordings -->

    <TextView
        android:id="@+id/expandable_subheader_timestamp_start"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/expandable_header_recId"
        android:layout_marginStart="30dp"
        android:layout_marginTop = "5dp"
        android:layout_marginBottom = "5dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/expandable_subheader_timestamp_end"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop = "5dp"
        android:layout_marginBottom = "5dp"
        android:layout_below="@id/expandable_subheader_timestamp_start"
        android:textSize="18sp" />

</RelativeLayout>